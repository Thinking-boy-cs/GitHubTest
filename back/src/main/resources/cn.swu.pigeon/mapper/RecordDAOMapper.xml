<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.swu.pigeon.dao.RecordDAO">
<!--    用户签到操作-->
    <insert id="record" parameterType="Record">
        insert into signrecord values (#{id},#{temperature},#{nation},#{province},#{city},#{signTime},#{location},#{longitude},#{latitude},#{activityId},#{companyId})
    </insert>
<!--    用户查看自己的签到信息-->
    <select id="find" parameterType="String" resultType="Record">
        select *
        from signrecord
        where id in (#{id})
    </select>
</mapper>